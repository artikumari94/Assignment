<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/test_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:padding="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardElevation="@dimen/margin_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/test_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_12_Sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/test_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:layout_weight="0.5"
                        android:text="package"
                        android:textSize="@dimen/text_size_10sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/test_know_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:layout_weight="0.5"
                        android:text="Know More"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/text_size_10sp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:layout_weight="0.2"
                 android:gravity="center"
                 android:orientation="vertical">

                 <ImageView
                     android:id="@+id/selected_test"
                     android:layout_width="@dimen/margin_15dp"
                     android:layout_height="@dimen/margin_15dp"
                     android:layout_gravity="center"
                     android:visibility="gone"
                     android:src="@drawable/ic_check_black_24dp" />

                 <TextView
                     android:id="@+id/test_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="@string/test"
                     android:textAllCaps="true"
                     android:textSize="@dimen/text_size_10sp" />
             </LinearLayout>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
