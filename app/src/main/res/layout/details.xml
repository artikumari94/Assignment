<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/select_lab_back"
            android:layout_width="@dimen/button_height40dp"
            android:layout_height="@dimen/button_height40dp"
            android:layout_gravity="start|center"
            android:layout_margin="@dimen/margin_10dp"
            android:src="@drawable/ico_back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_60dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_20sp"
            android:text="DETAILS">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_margin="@dimen/margin_5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/image_button_130dp"
                    android:layout_height="@dimen/image_button_130dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/margin_10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_margin="@dimen/margin_2dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/small_text_size_14sp" />

                <TextView
                    android:id="@+id/auther_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2dp"
                    android:gravity="start|center"
                    android:textStyle="italic"
                    android:textSize="@dimen/small_text_size_14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2dp"
                    android:gravity="start|center"
                    android:textSize="@dimen/small_text_size_14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/avg_reading_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2dp"
                    android:gravity="start|center"
                    android:textSize="@dimen/small_text_size_14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/total_rents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2dp"
                    android:gravity="start|center"
                    android:textSize="@dimen/small_text_size_14sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp">
        </TextView>

    </LinearLayout>



</LinearLayout>
